<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/feed_mr_top"
        android:layout_marginLeft="@dimen/feed_mr_lr"
        android:layout_marginRight="@dimen/feed_mr_lr"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/global_margin">

                <ImageView
                    android:layout_width="@dimen/feed_avatar_icon"
                    android:layout_height="@dimen/feed_avatar_icon"
                    android:src="@drawable/avatar"
                    />

                <LinearLayout
                    android:layout_width="165dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/global_margin"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tV_username_acp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Dikom Wanghru"
                        android:textColor="@color/black"
                        android:textSize="@dimen/font_size_1"
                        android:textStyle="bold">

                    </TextView>

                    <TextView
                        android:id="@+id/tV_daysAgo_acp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="\@hobarb"
                        android:textColor="@color/secondary"
                        android:textStyle="normal"
                        android:fontFamily="">

                    </TextView>

                </LinearLayout>
                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="95dp"
                    android:layout_height="35dp"
                    android:fontFamily="@font/viga"
                    android:textStyle="bold"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="5dp"
                    android:text="Connect"
                    android:background="@drawable/connect_btn"/>


            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:scaleType="fitXY"
                android:src="@drawable/placeholder"
                >

            </ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/global_margin">
                <HorizontalScrollView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    >

                    <LinearLayout
                        android:id="@+id/ll_tagsParent_acp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <include layout="@layout/layout_genre">

                        </include>

                        <include layout="@layout/layout_genre">

                        </include>

                        <include layout="@layout/layout_genre">

                        </include>

                    </LinearLayout>
                </HorizontalScrollView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 hr Ago"
                    android:textColor="@color/secondaryLight"/>
            </LinearLayout>
            
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>





