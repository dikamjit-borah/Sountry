<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/global_margin"
    android:orientation="vertical"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/secondary"
        android:orientation="vertical">

        <LinearLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/feed_avatar_icon"
                android:layout_height="@dimen/feed_avatar_icon"
                android:layout_margin="@dimen/global_margin"
                android:src="@drawable/avatar">

            </ImageView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/global_margin"
                android:layout_weight="1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tV_username_acp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Shsi0001"
                    android:textStyle="bold">

                </TextView>

                <TextView
                    android:id="@+id/tV_daysAgo_acp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Datetime">

                </TextView>

            </LinearLayout>


        </LinearLayout>

        <ImageView


            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder">

        </ImageView>

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/global_margin">

            <LinearLayout
                android:id="@+id/ll_tagsParent_acp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <include layout="@layout/layout_genre">

                </include>

                <include layout="@layout/layout_genre">

                </include>

            </LinearLayout>
        </HorizontalScrollView>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="bottom"
            android:background="@color/primary"

            android:elevation="@dimen/cardview_default_elevation"
            android:padding="@dimen/btn_padding"
            android:text="Add as connection"
            android:textColor="@color/white">

        </androidx.appcompat.widget.AppCompatButton>
    </LinearLayout>
</androidx.cardview.widget.CardView>
